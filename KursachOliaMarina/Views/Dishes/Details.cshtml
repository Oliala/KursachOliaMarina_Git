@using KursachOliaMarina.Models
@model KursachOliaMarina.Models.Dish

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Details</h2>
<fieldset>
    <legend>Информация о студенте</legend>

    <div class="display-label"><b>Имя</b></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.DishName)
    </div>

    <div class="display-label"><b>Фамилия</b></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Category)
    </div>

    <div class="display-label"><b>Фамилия</b></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Price)
    </div>
    <div class="display-label"><b>Фамилия</b></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Weight)
    </div>
    <div class="display-label"><b>Фамилия</b></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Note)
    </div>
    <div class="display-label"><b>Фамилия</b></div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Note)
    </div>
    <div class="display-label"><b>Курсы</b></div>
    <ul>
        @foreach (Ingredient c in Model.Ingredients)
        {
            <li>@c.IngredientName</li>
        }
    </ul>
    <div>
        @Html.ActionLink("Back to List", "Dishes", "Admins")
    </div>

</fieldset>




