@using KursachOliaMarina.Models
@model Dish
@{
    ViewBag.Title = "Create";
}
<h2> Create </h2>

 
 
@using (Html.BeginForm()) {
 
 @Html.AntiForgeryToken()
    <fieldset>
        <legend>Dish</legend>
 
        @Html.HiddenFor(model => model.Id)
 
        <div class="editor-label"><b>Название блюда</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DishName)
        </div>
 
        <div class="editor-label"><b>Категория</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Category)
        </div>

        <div class="editor-label"><b>Цена, грн</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
        </div>

        <div class="editor-label"><b>Вес, г</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Weight)
        </div>

        <div class="editor-label"><b>Приметка</b></div>
            <label class="radio-inline">@Html.RadioButtonFor(model => model.Note, "Рыба", new { @checked = "checked" })Рыба</label>
            <label class="radio-inline">@Html.RadioButtonFor(model => model.Note, "Мясо")Мясо</label>
            <label class="radio-inline">@Html.RadioButtonFor(model => model.Note, "Молоко")Молоко</label>
            <label class="radio-inline">@Html.RadioButtonFor(model => model.Note, "Селедка")Селедка</label>
            <br />

        <div class="editor-label"><b>Популярность</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Popularity)
        </div>

        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}